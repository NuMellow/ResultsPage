<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nodeflux.numellow.resultspage.PostActivity">

    <ImageButton
        android:layout_width="match_parent"
        app:srcCompat="@mipmap/ic_image_white_24dp"
        android:layout_alignParentTop="true"
        android:id="@+id/buttonImageSelect"
        android:background="@android:color/transparent"
        android:cropToPadding="true"
        android:layout_height="250dp"
        android:contentDescription="@string/add_post_image" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/textEditDesc"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_above="@+id/buttonSubmit"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="59dp"
        android:hint="@string/post_description_hint" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/textEditTitle"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        tools:ignore="HardcodedText"
        android:layout_above="@+id/textEditDesc"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="33dp"
        android:hint="Post Title" />

    <Button
        android:text="@string/post_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/buttonSubmit"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
